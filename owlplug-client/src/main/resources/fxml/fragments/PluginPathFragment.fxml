<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ToggleSwitch?>
<VBox fx:id="mainNode" spacing="5.0" VBox.vgrow="NEVER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="headerLabel" styleClass="heading-2" text="VST 3" />
    <FlowPane hgap="3.0" prefWidth="200.0">
        <VBox.margin>
            <Insets left="15.0" />
        </VBox.margin>
        <ToggleSwitch fx:id="activationToggleButton" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" text="Explore plugins" />
        <Label text="(" />
        <Hyperlink fx:id="extraDirectoryLink" styleClass="hyperlink-disabled" text="+ 0 additional directories" underline="true" />
        <Label text=")" />
    </FlowPane>
    <HBox alignment="BASELINE_LEFT" spacing="5.0">
        <VBox.margin>
            <Insets left="15.0" />
        </VBox.margin>
        <TextField fx:id="directoryTextField" promptText="VST3 plugin directory" HBox.hgrow="ALWAYS" />
        <Button fx:id="directoryButton" text="..." />
    </HBox>
    <HBox spacing="10.0">
        <VBox.margin>
            <Insets left="15.0"/>
        </VBox.margin>
        <Label fx:id="directoryExistLabel" text="Directory Exists">
           <graphic>
               <Region prefHeight="12.0" prefWidth="12.0"/>
           </graphic>
        </Label>
        <Label fx:id="canReadLabel" text="Can Read">
           <graphic>
               <Region prefHeight="12.0" prefWidth="12.0"/>
           </graphic>
        </Label>
        <Label fx:id="canWriteLabel" layoutX="101.0" layoutY="10.0" text="Can Write">
           <graphic>
               <Region prefHeight="12.0" prefWidth="12.0"/>
           </graphic>
        </Label>
    </HBox>
</VBox>
